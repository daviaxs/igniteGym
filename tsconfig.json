  "compilerOptions": {
    "strict": true,
    "paths": {
      "@routes/*": ["./src/routes/*"],
      "@screens/*": ["./src/screens/*"],
      "@storage/*": ["./src/storage/*"],
      "@dtos/*": ["./src/dtos/*"],
